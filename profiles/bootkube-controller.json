{
  "id": "bootkube-controller",
  "name": "bootkube Ready Controller",
  "boot": {
    "kernel": "/assets/coreos/current/coreos_production_pxe.vmlinuz",
    "initrd": ["/assets/coreos/current/coreos_production_pxe_image.cpio.gz"],
    "args": [
      "root=/dev/vda1",
      "coreos.config.url=http://10.99.0.254:8080/ignition?uuid=${uuid}&mac=${mac:hexhyp}",
      "coreos.first_boot=yes",
      "console=tty0",
      "console=ttyS0",
      "coreos.autologin"
    ]
  },
  "ignition_id": "bootkube-controller.yaml"
}
